<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170px"
    android:id="@+id/widget_middle_layout"
    android:background="@drawable/songitem_btn_bg"
    android:clickable="true"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/widget_middle_singer_img"
        android:layout_width="110px"
        android:layout_height="110px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/playing_bar_default_avatar" />

    <LinearLayout
        android:id="@+id/widget_middle_song_info"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_toRightOf="@+id/widget_middle_singer_img"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/widget_middle_song"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Almost Lover"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_middle_singer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="A Fine Frenzy"
            android:textColor="#FFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/widget_middle_song"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="RMF.FM Muzyka Najlepsza Pllajflkjllj"
            android:textColor="#FFF"
            android:textSize="16sp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/widget_middle_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/widget_middle_song_info"
        android:layout_marginTop="2dp"
        android:indeterminateDrawable="@drawable/custom_progressbar" />

    <LinearLayout
        android:id="@+id/widget_middle_op_layout"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/widget_middle_mode"
            android:layout_width="wrap_content"
            android:layout_height="40px"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_player_mode_sequence" />

        <ImageView
            android:id="@+id/widget_middle_op_previous"
            android:layout_width="wrap_content"
            android:layout_height="40px"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/btn_simple_previous" />

        <ImageView
            android:id="@+id/widget_middle_op_playorpause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/btn_simple_play" />

        <ImageView
            android:id="@+id/widget_middle_op_next"
            android:layout_width="wrap_content"
            android:layout_height="40px"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/btn_simple_next" />

        <ImageView
            android:id="@+id/widget_middle_lrc_switch"
            android:layout_width="wrap_content"
            android:layout_height="40px"
            android:layout_weight="1"
            android:src="@drawable/widget_minilyric_off" >
        </ImageView>
    </LinearLayout>

</RelativeLayout>