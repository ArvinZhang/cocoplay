<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:id="@+id/widget_big_layout"
    android:background="@drawable/songitem_btn_bg"
    android:clickable="true"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/widget_big_singer_img"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/playing_bar_default_avatar" />

    <RelativeLayout
        android:id="@+id/widget_big_song_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_big_singer_img"
        android:padding="5dp" >

        <TextView
            android:id="@+id/widget_big_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/widget_big_time"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="Almost Lover"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_big_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="2dp"
            android:singleLine="true"
            android:text="2:32/3:42"
            android:textColor="#FFF"
            android:textSize="14sp" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/widget_big_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/widget_big_song_info"
        android:layout_marginTop="2dp"
        android:progressDrawable="@drawable/custom_progressbar" />

    <LinearLayout
        android:id="@+id/widget_big_op_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_big_progressbar"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/widget_big_mode"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_player_mode_sequence" />

        <ImageView
            android:id="@+id/widget_big_op_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/btn_simple_previous" />

        <ImageView
            android:id="@+id/widget_big_op_playorpause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/btn_simple_play" />

        <ImageView
            android:id="@+id/widget_big_op_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/btn_simple_next" />

        <ImageView
            android:id="@+id/widget_big_lrc_switch"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/widget_minilyric_off" >
        </ImageView>
    </LinearLayout>

</RelativeLayout>